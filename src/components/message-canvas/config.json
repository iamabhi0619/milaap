{
  "messageStyles": {
    "bubbleRadius": {
      "default": "rounded-2xl",
      "square": "rounded-lg",
      "round": "rounded-3xl",
      "minimal": "rounded-md"
    },
    "messagePadding": {
      "compact": "px-3 py-1.5",
      "default": "px-4 py-2",
      "comfortable": "px-5 py-3"
    },
    "avatarSize": {
      "small": "h-6 w-6",
      "default": "h-8 w-8",
      "large": "h-10 w-10"
    }
  },
  "colorSchemes": {
    "default": {
      "ownMessageBg": "bg-primary",
      "ownMessageText": "text-primary-foreground",
      "otherMessageBg": "bg-secondary",
      "otherMessageText": "text-secondary-foreground"
    },
    "blue": {
      "ownMessageBg": "bg-blue-500",
      "ownMessageText": "text-white",
      "otherMessageBg": "bg-gray-200",
      "otherMessageText": "text-gray-900"
    },
    "green": {
      "ownMessageBg": "bg-green-500",
      "ownMessageText": "text-white",
      "otherMessageBg": "bg-gray-100",
      "otherMessageText": "text-gray-900"
    },
    "purple": {
      "ownMessageBg": "bg-purple-500",
      "ownMessageText": "text-white",
      "otherMessageBg": "bg-gray-200",
      "otherMessageText": "text-gray-900"
    }
  },
  "features": {
    "enableReactions": true,
    "enableReply": true,
    "enableEdit": true,
    "enableDelete": true,
    "enableFormatting": true,
    "enableVoiceNotes": true,
    "enableFileAttachments": true,
    "showSeenStatus": true,
    "showTypingIndicator": true,
    "showOnlineStatus": true,
    "enableMessageSearch": true,
    "enablePinMessages": false
  },
  "animations": {
    "messageEntry": {
      "enabled": true,
      "type": "slide-up",
      "duration": 0.3
    },
    "reactionPop": {
      "enabled": true,
      "scale": 1.2
    },
    "typingDots": {
      "enabled": true,
      "speed": 0.6
    }
  },
  "messages": {
    "maxLength": 5000,
    "loadMoreCount": 20,
    "dateFormat": "MM/DD/YYYY",
    "timeFormat": "12h"
  }
}
